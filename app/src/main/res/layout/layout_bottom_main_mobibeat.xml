<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CardView"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:layout_alignParentBottom="true"
    app:cardElevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llHomeBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivHomeBottom"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_home_32_red" />

            <TextView
                android:id="@+id/tvHomeBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textColor="@color/red_app"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llLikeBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivLikeBottom"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_like_bottombar" />

            <TextView
                android:id="@+id/tvLikeBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yêu thích"
                android:textColor="@color/gray_app"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llSettingBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSettingBottom"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_setting_bottombar" />

            <TextView
                android:id="@+id/tvSettingBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cài đặt"
                android:textColor="@color/gray_app"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>